{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "rootDir": "./backend",
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": ["backend/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}